#!/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no
libdir=@libdir@
includedir=@includedir@

usage="\
Usage: itpp-config [--prefix] [--exec-prefix] [--version] [--libs] [--cflags]"

if test $# -eq 0; then
  echo "${usage}" 1>&2
  exit 1
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo @VERSION@
      ;;
    --cflags)
      echo -I${includedir} @CPPFLAGS@ @CXXFLAGS@
      ;;
    --libs)
      echo -L${libdir} -l@PACKAGE@ @LIBS@
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done
